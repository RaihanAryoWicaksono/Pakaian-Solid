@model IEnumerable<Pakaianku.Pakaian>

@{
    ViewData["Title"] = "Katalog Pakaian";
}

<h1 class="text-3xl font-bold mb-6 text-gray-900">Katalog Pakaian</h1>

<p class="mb-4">
    <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md shadow-md transition duration-300 ease-in-out inline-block">Tambah Pakaian Baru</a>
</p>

@if (!Model.Any())
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded-md" role="alert">
        <p class="font-bold">Informasi</p>
        <p>Tidak ada pakaian dalam katalog.</p>
    </div>
}
else
{
    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full border border-gray-300">
            <thead>
                <tr class="bg-gray-200">
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b border-r">Kode</th>
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b border-r">Nama</th>
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b border-r">Kategori</th>
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b border-r">Warna</th>
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b border-r">Ukuran</th>
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b border-r">Harga</th>
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b border-r">Stok</th>
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b border-r">Status</th>
                    <th class="py-3 px-4 uppercase font-semibold text-sm text-gray-600 border-b">Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="py-2 px-4 border-b border-r">@item.Kode</td>
                        <td class="py-2 px-4 border-b border-r">@item.Nama</td>
                        <td class="py-2 px-4 border-b border-r">@item.Kategori</td>
                        <td class="py-2 px-4 border-b border-r">@item.Warna</td>
                        <td class="py-2 px-4 border-b border-r">@item.Ukuran</td>
                        <td class="py-2 px-4 border-b border-r">Rp@(item.Harga.ToString("N0"))</td>
                        <td class="py-2 px-4 border-b border-r">@item.Stok</td>
                        <td class="py-2 px-4 border-b border-r">@item.Status</td>
                        <td class="py-2 px-4 border-b whitespace-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.Kode" class="text-blue-600 hover:text-blue-900 mr-2">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Kode" class="text-green-600 hover:text-green-900 mr-2">Detail</a> |
                            <a asp-action="Delete" asp-route-id="@item.Kode" class="text-red-600 hover:text-red-900">Hapus</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
