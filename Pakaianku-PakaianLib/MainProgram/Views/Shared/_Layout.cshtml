<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistem Penjualan Pakaian</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Pastikan tidak ada blok a@apply di sini. Hanya CSS kustom jika benar-benar diperlukan. */
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800">
    <header>
        <nav class="bg-blue-800 p-4 shadow-lg rounded-b-lg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
                <a class="text-white text-2xl font-bold" asp-area="" asp-controller="Pakaian" asp-action="Index">Sistem Penjualan Pakaian</a>
                <div class="space-x-4">
                    <a class="text-white hover:text-blue-200 transition duration-300" asp-area="" asp-controller="Pakaian" asp-action="Index">Katalog</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-300 text-gray-600 text-center py-4 mt-8 bg-white shadow-inner rounded-t-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            &copy; 2024 - Sistem Penjualan Pakaian
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
